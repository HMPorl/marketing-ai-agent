  "title_guidelines": {
    "format": "Clean product name only",
    "avoid": [
      "Professional Hire London",
      "- The Hireman London", 
      "Professional Grade",
      "Available for Hire"
    ],
    "include": [
      "Brand name",
      "Model number", 
      "Product type"
    ],
    "examples": {
      "good": [
        "Honda HR194 Rotary Lawnmower",
        "Stihl MS250 Chainsaw",
        "Belle PCX 13/36 Plate Compactor"
      ],
      "bad": [
        "Honda HR194 Rotary Lawnmower - Professional Hire London",
        "Professional Chainsaw Hire - The Hireman London"
      ]
    }
  },
  "description_guidelines": {
    "structure": {
      "intro": {
        "length": "1-2 sentences",
        "content": "Brief factual description of what the product is and its primary purpose",
        "avoid": ["marketing language", "superlatives", "hire context"]
      },
      "key_features": {
        "format": "HTML unordered list with <strong>Key features:</strong> header",
        "content": "Factual technical features and capabilities",
        "avoid": ["marketing fluff", "subjective claims"]
      },
      "notes_section": {
        "content": "Reserved for manual NB: notifications",
        "added_by": "user_manually"
      }
    },
    "tone": {
      "style": "factual, professional, technical",
      "avoid": [
        "ideal", "perfect", "exceptional", "amazing", "best",
        "outstanding", "superior", "premium", "ultimate"
      ],
      "prefer": [
        "designed for", "suitable for", "provides", "features",
        "includes", "capable of", "offers"
      ]
    }
  },
